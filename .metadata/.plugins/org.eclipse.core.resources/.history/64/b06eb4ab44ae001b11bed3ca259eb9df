package com.kosta.sample1;

public class LgTV implements TV {
	String model;
	String company;
	
	public LgTV(String model2, String company) {
		this.model = model2;
		this.company = company;
		System.out.println(company + " " + model2 + " LgTV를 만든다");
	}
	
	public void powerOn() {
		System.out.println(getClass().getSimpleName() + " 전원을 켠다");
	}
	
	public void powerOff() {
		System.out.println(getClass().getSimpleName() + " 전원을 끈다");
	}
}
